<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File No: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="105587" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="File Date: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="abc123" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportCustomerName"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="Cheque" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Model: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportVehicleMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="29/12/2017" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Amount: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportLoanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="5000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Payment: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportNetPayment"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="200000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportReceiveStatus"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="Received" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportRemarks"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="No Remarks" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created By: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fileReportCreatedBy"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/rasidTextColor"
                tools:text="jeet" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>